@{
    Layout = null;
    ViewData["Title"] = "Payment";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3>Payment Portal</h3>
                    </div>
                    <div class="card-body">
                        <p><strong>Application ID:</strong> @ViewBag.ApplicationId</p>
                        <h4 class="text-success">Amount: ₹@ViewBag.Amount</h4>

                        <div class="alert alert-info mt-3">
                            Payment gateway integration pending. This is a demo page.
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-success btn-lg" onclick="alert('Payment integration pending!')">
                                Pay ₹@ViewBag.Amount
                            </button>
                            <a href="@Url.Action("ApplicationId", "Home")" class="btn btn-secondary">
                                Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
