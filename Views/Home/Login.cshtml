@{
    ViewData["Title"] = "CHARUSAT - Login Portal";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/register.css" rel="stylesheet">
</head>
<body>
    <!-- Animated Background -->
    <div class="background-animation">
        <div class="floating-shape shape-1"></div>
        <div class="floating-shape shape-2"></div>
        <div class="floating-shape shape-3"></div>
        <div class="floating-shape shape-4"></div>
        <div class="floating-shape shape-5"></div>
    </div>

    <!-- Main Container -->
    <div class="main-container">
        <div class="login-wrapper">
            <!-- Logo Section -->
            <div class="logo-section">
                <div class="charusat-logo">
                    <img src="~/images/logo.png" alt="CHARUSAT Logo" width="200" />
                </div>
                <div class="logo-text">
                    <h1>Welcome</h1>
                    <p>Login to your account</p>
                </div>
            </div>

            <!-- Form Section -->
            <div class="form-section">
                <h2 class="login-title">Login</h2>
                <hr class="title-underline">

                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@ViewBag.SuccessMessage
                        @if (ViewBag.UserEmail != null)
                        {
                            <br>
                    
                            <small>Please check your email <strong>@ViewBag.UserEmail</strong> for the OTP.</small>
                        }
                    </div>
                }

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
                    </div>
                }

                <form asp-action="Login" method="post" class="mt-4">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label for="EmailOrMobile" class="form-label">Email*</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input type="email" class="form-control" id="EmailOrMobile" name="EmailOrMobile"
                                   placeholder="Enter your email" required value="@ViewBag.UserEmail">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="OtpCode" class="form-label">OTP*</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                            <input type="text" class="form-control" id="OtpCode" name="OtpCode"
                                   placeholder="Enter OTP" required>
                        </div>
                        <div class="otp-info mt-2">
                            <i class="fas fa-info-circle me-1"></i>
                            Enter the OTP sent to your registered email address.
                        </div>
                    </div>

                    <button type="submit" class="btn login-btn w-100 mb-3">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </button>
                </form>

                <div class="text-center mb-3">
                    <button type="button" class="btn get-otp-btn" id="getOtpBtn">
                        <i class="fas fa-mobile-alt me-2"></i>Get a new OTP
                    </button>
                </div>

                <div class="text-center">
                    <a asp-action="Register" class="btn register-btn">
                        <i class="fas fa-user-plus me-2"></i>Register
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Get OTP button functionality
        document.getElementById('getOtpBtn').addEventListener('click', function() {
            const emailInput = document.getElementById('EmailOrMobile');
            const email = emailInput.value.trim();

            if (!email) {
                alert('Please enter your email address first');
                return;
            }

            // Show loading
            this.disabled = true;
            this.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Sending OTP...';

            // Send OTP request
            fetch('/Home/SendOtp', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ emailOrMobile: email })
            })
            .then(response => response.json())
            .then(data => {
                // Reset button
                this.disabled = false;
                this.innerHTML = '<i class="fas fa-mobile-alt me-2"></i>Get a new OTP';

                if (data.success) {
                    alert('OTP sent successfully to your email!');
                } else {
                    alert('Failed to send OTP: ' + data.message);
                }
            })
            .catch(error => {
                // Reset button
                this.disabled = false;
                this.innerHTML = '<i class="fas fa-mobile-alt me-2"></i>Get a new OTP';
                alert('Error sending OTP. Please try again.');
            });
        });
    </script>
</body>
</html>
