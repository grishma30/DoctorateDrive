@model DoctorateDrive.DTOs.RegisterRequestDto
@{
    ViewData["Title"] = "CHARUSAT - Registration Portal";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/register.css" rel="stylesheet">
</head>
<body>
    <!-- Main Container -->
    <div class="main-container">
        <div class="login-wrapper">
            <!-- Logo Section -->
            <div class="logo-section">
                <div class="charusat-logo">
                    <img src="~/images/logo.png" alt="CHARUSAT Logo" width="200" />
                </div>
                <div class="logo-text">
                    <h1>Join CHARUSAT</h1>
                    <p>Create your account</p>
                </div>
            </div>

            <!-- Form Section -->
            <div class="form-section">
                <h2 class="login-title">Register</h2>
                <hr class="title-underline">

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
                    </div>
                }

                <form asp-action="Register" method="post" class="mt-4">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">Full Name*</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input asp-for="FullName" class="form-control" placeholder="Enter full name" required>
                        </div>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EmailId" class="form-label">Email*</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input asp-for="EmailId" class="form-control" placeholder="Enter email" type="email" required>
                        </div>
                        <span asp-validation-for="EmailId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MobileNumber" class="form-label">Mobile Number</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                            <input asp-for="MobileNumber" class="form-control" placeholder="Enter mobile number" type="tel">
                        </div>
                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn login-btn w-100 mb-3">
                        <i class="fas fa-user-plus me-2"></i>Register & Send OTP
                    </button>

                    <div class="text-center">
                        <a asp-action="Login" class="btn register-btn">
                            <i class="fas fa-sign-in-alt me-2"></i>Already registered? Login
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
